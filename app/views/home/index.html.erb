<div class="top_bar">

</div>
<div class="container">
  <%= link_to "Sign Out", destroy_user_session_path, :method => :delete%>
  <h1>fitbitch</h1>

    <div class="messages">
      <% if @messages.empty? %>
        <div class="happy_msg">
          <p>Yay looks like you're off to a great start! Best of luck, champ!</p>
        </div>
      <% else %>

      <% end %>
      <% @messages.each do |message| %>
        <div class="message">
            <p class="content"><%= message.content.message %></p>
            <p class="timestamp"><%= message.created_at.in_time_zone("Eastern Time (US & Canada)").strftime("%Y-%m-%d %I:%M%p") %></p>
        </div>
      <% end %>
    </div>
</div>
